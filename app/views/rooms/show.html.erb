<%= render "shared/header" %>

<div class="chat-wrapper">
  <div class="side-bar">
    <div class="side-bar-header">
      <div class="header-name">
        <%= link_to current_user.name, edit_user_path(current_user) %>
      </div>
      <div class="create-room">
        <%= link_to "チャットを作成する", new_room_path %>
      </div>
    </div>

    <div class="rooms">
      <% @rooms.each do |room| %>
        <div class="room">
          <div class="room-name">
            <%= link_to room.name, room_path(room.id) %>
            <%# 個々のルームにいく %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  

  <div class="chat">
    <div class="chat-header">
      <div class="left-header">
        <div class="header-title">
          <%= @room.name %>
        </div>
      </div>
      <div class="right-header">
        <div class="header-button">
          <%= link_to "チャットを終了する", room_path(@room), method: :delete %>
        </div>
      </div>
    </div>

    <h4>＜メッセージ一覧＞</h4>
    <% @messages.each do |message| %>
      <%= l message.created_at %>
      <p>
        <strong><%= link_to message.user.name, "/users/#{message.user_id}" %>：</strong>
        <%= message.text %>
      </p>
    <% end %>
  </div>
<%# ここまではメインチャットの分 %>
</div>



<%= form_with(model: [@room, @message], class: 'form', local: true) do |f| %>
  <div class="form-input">
    <%= f.text_area :text, placeholder: "コメントする",class: 'form-message' %>
    <%= f.submit "SEND", class: 'form-submit' %>  
  </div>
<% end %>

<%= render "shared/footer" %>


